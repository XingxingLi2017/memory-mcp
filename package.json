{
  "name": "memory-mcp",
  "version": "0.1.0",
  "description": "Local memory management MCP server for Copilot CLI",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "memory-mcp": "dist/setup.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "preuninstall": "node dist/setup.js uninstall; node dist/setup.js uninstall --claude",
    "test": "node --test dist/**/*.test.js"
  },
  "keywords": [
    "mcp",
    "copilot",
    "memory",
    "rag",
    "sqlite",
    "fts5"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "better-sqlite3": "^11.8.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
